<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/logo">
    <RelativeLayout android:id="@+id/roster_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#00BFFF">

        <TextView android:id="@+id/user_acct"
                  android:layout_width="77dp"
                  android:layout_height="60dp"
                  android:textColor="#000000"
                  android:text=""/>
    </RelativeLayout>

    <LinearLayout android:id="@+id/uid_layout"
                  android:layout_width="match_parent"
                  android:layout_height="40dp">

        <TextView android:id="@+id/username"
                  android:text="Username"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <EditText android:id="@+id/inputname"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
     </LinearLayout>
     <LinearLayout android:id="@+id/pwd_layout"
                   android:layout_width="200dp"
                   android:layout_height="40dp">

     <TextView android:id="@+id/password"
                  android:text="Password"
                  android:textColor="#000000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <EditText android:id="@+id/inputpwd"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
     </LinearLayout>

    <LinearLayout android:id="@+id/sub_layout"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
        <Button android:id="@+id/loginbutton"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="loginClick"/>
        <ImageView android:id="@+id/progress"
                   android:src="@drawable/circle"
                   android:layout_height="40dp"
                   android:layout_width="40dp"/>
        <TextView android:id="@+id/status"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>