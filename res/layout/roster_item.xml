<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/roster_item"
              android:layout_width="fill_parent"
              android:layout_height="60dp"
              android:orientation="horizontal"
              android:background="#FFFFFF">

    <ImageView android:id="@+id/availabilityimage"
               android:layout_height="match_parent"
               android:layout_width="5dp"
               android:layout_alignParentLeft="true"/>

    <TextView android:id="@+id/rowjid"
              android:layout_height="60dp"
              android:layout_width="wrap_content"
              android:textColor="#000000"
              android:layout_toRightOf="@id/availabilityimage"/>

    <ImageView android:id="@+id/rowimage"
               android:layout_height="match_parent"
               android:layout_width="60dp"
               android:layout_alignParentRight="true"/>

    <TextView android:id="@+id/accounttype"
              android:layout_height="60dp"
              android:layout_width="wrap_content"
              android:textColor="#000000"
              android:layout_toLeftOf="@id/rowimage"/>



</RelativeLayout>